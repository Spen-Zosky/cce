{
  "server": {
    "port": "auto",
    "host": "localhost",
    "autoOpen": true,
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:*"]
    }
  },
  "api": {
    "prefix": "/api/v1",
    "rateLimit": {
      "enabled": true,
      "windowMs": 900000,
      "max": 100
    }
  },
  "dashboard": {
    "enabled": true,
    "theme": "auto",
    "refreshInterval": 5000
  },
  "auth": {
    "enabled": false,
    "type": "token",
    "sessionDuration": "24h"
  },
  "database": {
    "type": "sqlite",
    "path": "~/.cce-universal/web/data/cce.db"
  },
  "features": {
    "projectManager": true,
    "configEditor": true,
    "logViewer": true,
    "metrics": true,
    "terminal": false
  }
}
